{
    "$schema": "https://raw.githubusercontent.com/lostintangent/packer-schema/refs/heads/master/packer.json",
    "builders": [
        {
            "type": "arm",
            "file_urls": [
                "https://downloads.raspberrypi.com/raspios_lite_arm64/images/raspios_lite_arm64-2024-07-04/2024-07-04-raspios-bookworm-arm64-lite.img.xz"
            ],
            "file_checksum_url": "https://downloads.raspberrypi.com/raspios_lite_arm64/images/raspios_lite_arm64-2024-07-04/2024-07-04-raspios-bookworm-arm64-lite.img.xz.sha256",
            "file_unarchive_cmd": [
                "xz",
                "-d",
                "$ARCHIVE_PATH"
            ],
            "file_checksum_type": "sha256",
            "file_target_extension": "xz",
            "image_build_method": "resize",
            "image_path": "test.img",
            "image_size": "3G",
            "image_type": "dos",
            "image_partitions": [
                {
                    "name": "boot",
                    "type": "c",
                    "start_sector": "8192",
                    "filesystem": "vfat",
                    "size": "256M",
                    "mountpoint": "/boot"
                },
                {
                    "name": "root",
                    "type": "83",
                    "start_sector": "532480",
                    "filesystem": "ext4",
                    "size": "0",
                    "mountpoint": "/"
                }
            ],
            "image_chroot_env": [
                "PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
            ],
            "qemu_binary_source_path": "/usr/bin/qemu-arm-static",
            "qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "src/",
            "destination": "/tmp/src"
        },
        {
            "type": "shell",
            "environment_vars": [
                "WIFI_SSID={{user `wifi_ssid`}}"
            ],
            "inline": [
                "ESCAPED_SSID=$(echo $WIFI_SSID | sed 's/[\/&]/\\\\&/g')",
                "sed -i \"s/<%SSID%>/$ESCAPED_SSID/g\" /tmp/src/install/setup_wifi.sh"
            ]
        },
        {
            "type": "shell",
            "inline": []
        },
        {
            "type": "shell",
            "inline": [
                "chmod +x /tmp/src/install/install.sh",
                "bash /tmp/src/install/install.sh"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "touch /boot/ssh"
            ]
        }
    ],
    "variables": {
        "wifi_ssid": "{{env `WIFI_SSID`}}"
    }
}